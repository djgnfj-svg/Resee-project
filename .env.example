# Development Environment Variables Template
# Copy this file to .env and fill in your actual values
# WARNING: Never commit .env file with real credentials!

# ================================
# Django Core Settings
# ================================
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
DJANGO_SETTINGS_MODULE=resee.settings.development
TIME_ZONE=Asia/Seoul

# ================================
# Allowed Hosts & CORS
# ================================
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# ================================
# Database (Local PostgreSQL)
# ================================
# For local development - using Docker Compose postgres service
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=resee_dev
DATABASE_URL=postgresql://postgres:your-postgres-password@postgres:5432/resee_dev

# Production Supabase PostgreSQL (for reference, use in production)
# DATABASE_URL=postgresql://postgres.xxx:password@aws-x-xx-xxxx-x.pooler.supabase.com:6543/postgres

# ================================
# Cache & Queue (Upstash Redis)
# ================================
REDIS_URL=rediss://default:your-redis-password@your-redis-host.upstash.io:6379

# Upstash REST API (Optional)
UPSTASH_REDIS_REST_URL=https://your-redis-host.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-rest-token

# ================================
# Frontend Settings
# ================================
FRONTEND_URL=http://localhost
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id

# ================================
# Email Settings (Gmail SMTP)
# ================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com
COMPANY_NAME=Resee
SUPPORT_EMAIL=support@localhost

# Email Verification
ENFORCE_EMAIL_VERIFICATION=True
EMAIL_VERIFICATION_TIMEOUT_DAYS=1

# ================================
# Admin & Subscription
# ================================
ADMIN_EMAIL=admin@localhost
ADMIN_PASSWORD=your-admin-password
SUBSCRIPTION_ADMIN_PASSWORD=your-subscription-admin-password

# ================================
# Google OAuth
# ================================
GOOGLE_OAUTH2_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-oauth-client-secret

# ================================
# AI Services (Anthropic Claude)
# ================================
ANTHROPIC_API_KEY=your-anthropic-api-key

# ================================
# Slack Alerts & Monitoring
# ================================
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_DEFAULT_CHANNEL=#alerts
SLACK_BOT_NAME=Resee Alert Bot

# ================================
# AWS Settings (ECS Fargate)
# ================================
AWS_REGION=ap-northeast-2
AWS_ACCOUNT_ID=your-aws-account-id
AWS_ECR_REPOSITORY_URI=your-account-id.dkr.ecr.region.amazonaws.com/resee-backend
AWS_ALB_DNS=your-alb-dns.elb.amazonaws.com

# AWS Credentials (for local deployment, also used in GitHub Secrets)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# ================================
# Toss Payments (Optional)
# ================================
# Activate after business registration
# TOSS_CLIENT_KEY=test_gck_docs_...
# TOSS_SECRET_KEY=test_gsk_docs_...
# TOSS_API_URL=https://api.tosspayments.com
