# Django Core Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# Database Settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=resee_dev
DATABASE_URL=postgresql://postgres:your-postgres-password@postgres:5432/resee_dev

# Frontend Settings
FRONTEND_URL=http://localhost
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Application Settings
COMPANY_NAME=Resee
SUPPORT_EMAIL=support@localhost
ENFORCE_EMAIL_VERIFICATION=True
EMAIL_VERIFICATION_TIMEOUT_DAYS=1

# Subscription Settings
SUBSCRIPTION_ADMIN_PASSWORD=your-admin-password

# Google OAuth (Optional)
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# Django Settings Module
DJANGO_SETTINGS_MODULE=resee.settings.development

# Timezone
TIME_ZONE=Asia/Seoul

# AI Services (Required for AI features)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Slack Alerts (Optional)
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_DEFAULT_CHANNEL=#alerts
SLACK_BOT_NAME=Resee Alert Bot

