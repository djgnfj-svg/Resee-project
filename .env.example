# Resee 개발 환경 설정 템플릿
# 실제 사용시 이 파일을 복사해서 .env로 만들고 값을 채워주세요

# Django Core Settings
SECRET_KEY=your-secret-key-change-this-in-production-min-50-chars
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# Database Settings
POSTGRES_DB=resee_db
POSTGRES_USER=resee_user
POSTGRES_PASSWORD=change-this-strong-password
DATABASE_URL=postgresql://resee_user:change-this-strong-password@db:5432/resee_db

# Redis Settings
REDIS_PASSWORD=change-this-redis-password
REDIS_URL=redis://:change-this-redis-password@redis:6379/0

# AI Settings - Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-api03-your-api-key-here
AI_USE_MOCK_RESPONSES=True

# Frontend Settings
REACT_APP_API_URL=http://localhost:8000/api

# Google OAuth Configuration (Optional - Leave empty to disable)
REACT_APP_GOOGLE_CLIENT_ID=
GOOGLE_OAUTH2_CLIENT_ID=
GOOGLE_OAUTH2_CLIENT_SECRET=

# Email Settings - Gmail SMTP
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com
ENFORCE_EMAIL_VERIFICATION=True

# Timezone
TIME_ZONE=Asia/Seoul

# Django Settings Module
DJANGO_SETTINGS_MODULE=resee.settings.development

# Development Frontend URL
FRONTEND_URL=http://localhost:3000