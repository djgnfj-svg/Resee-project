{
  "name": "resee-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@heroicons/react": "^2.0.13",
    "@tanstack/react-query": "^4.16.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@tiptap/extension-link": "^3.4.1",
    "@tiptap/extension-placeholder": "^3.0.7",
    "@tiptap/react": "^3.0.7",
    "@tiptap/starter-kit": "^3.0.7",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.3",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "autoprefixer": "^10.4.13",
    "axios": "^1.2.0",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.525.0",
    "postcss": "^8.4.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.39.4",
    "react-hot-toast": "^2.5.2",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.4.4",
    "react-scripts": "5.0.1",
    "recharts": "^2.15.4",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "react-scripts test --coverage --ci --watchAll=false",
    "test:quick": "react-scripts test --watchAll=false --verbose=false",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "ci:quick": "npm run typecheck && npm run build --silent",
    "eject": "react-scripts eject",
    "pwa:icons": "node ../scripts/generate-pwa-icons.js",
    "pwa:test": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html --view"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/node": "^16.18.3",
    "msw": "^1.3.5"
  },
  "proxy": "http://backend:8000",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/setupTests.ts",
      "!src/test-utils/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(react-markdown|axios|@tiptap|remark-|rehype-|micromark-|decode-uri-component|split-on-first|filter-obj|query-string)/)"
    ]
  }
}
